// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Multi-environment database configuration
// Uses environment variables to determine the database provider
// Provides default values for Netlify compatibility
datasource db {
  provider = env("DATABASE_PROVIDER") // postgresql, mysql, or sqlite
  url      = env("DATABASE_URL")
  
  // This ensures the schema can be generated during build time
  // even if environment variables are not set
  relationMode = "prisma"
}

model Video {
  id          String   @id @default(cuid())
  title       String
  description String?
  videoUrl    String
  thumbnailUrl String?
  type        String   // "upload" or "embed"
  publishedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  videos    Video[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
